<?xml version="1.0" encoding="UTF-8"?>
<beans default-lazy-init="true" xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:dwr="http://www.directwebremoting.org/schema/spring-dwr"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
	http://www.directwebremoting.org/schema/spring-dwr http://www.directwebremoting.org/schema/spring-dwr-2.0.xsd">

	<!-- Dao -->
	<bean id="holidayDao" parent="abstractDao">
		<property name="proxyInterfaces" value="com.funo.holiday.dao.IHolidayDao" />
		<property name="target">
			<bean parent="abstractSysDaoTarget">
				<constructor-arg value="com.funo.holiday.model.Holiday" />
			</bean>
		</property>
	</bean>
		
	<!-- Adapt -->
	<bean id="holidayAdapt" parent="adaptProxy">
		<property name="target">
			<bean class="com.funo.holiday.adapt.impl.HolidayAdapt" parent="abstractAdapt" autowire="byName" />
		</property>
	</bean>	
	
	<!-- Mgmt -->	
	<bean id="holidayMgmt" parent="sysTranProxy">
		<property name="target">
			<bean class="com.funo.holiday.mgmt.impl.HolidayMgmt" parent="abstractMgmt" autowire="byName" />
		</property>
	</bean>
	
	<!-- Action -->
	<bean id="HolidayAction" class="com.funo.holiday.action.HolidayAction">
		<property name="holidayMgmt" ref="holidayMgmt"></property>
		<dwr:remote javascript="HolidayAction" />
	</bean>
</beans>